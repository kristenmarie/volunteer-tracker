<h1><%= @project.title %></h1>

<% if @project.volunteers.any? %>
  <h2>Project Volunteers:</h2>
  <ul>
    <% @volunteers.each do |volunteer| %>
      <li><a href="/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></li>
    <% end %>
  </ul>

  <h2>Add Volunteer to Project:</h2>
<% end %>


<h2>Update Project:</h2>
<form action="/projects/<%= @project.id %>" method="post">
  <div class="form-group">
    <label for="name">Volunteer Name:</label>
    <input type="text" name="name" class="form-control">
  </div>
  <button type="submit" class="btn">Add Volunteer</button>
</form>

<form action="/projects/<%= @project.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="title">New Project Title</label>
    <input type="text" name="title" class="form-control">
  </div>
  <button type="submit" class="btn">Update Project</button>
</form>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Project</button>
</form>

<a href="/">Home</a>

<button type="button" name="button"><a href="#"></a></button>
